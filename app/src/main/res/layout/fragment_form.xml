<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.FormFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/sample_picture"
        android:contentDescription="@string/profile_image"
        app:civ_border_color="@color/green"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_take_photo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/take_photo_icon_background"
        android:contentDescription="@string/take_photo"
        android:elevation="2dp"
        android:padding="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/dslr_camera"
        app:layout_constraintEnd_toStartOf="@+id/btn_upload_photo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/profile_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_take_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="2dp"
        android:text="@string/take_a_photo"
        android:textColor="@color/small_text"
        android:textSize="@dimen/small_font_size"
        app:layout_constraintBottom_toBottomOf="@+id/txt_upload_photo"
        app:layout_constraintEnd_toEndOf="@+id/btn_take_photo"
        app:layout_constraintStart_toStartOf="@+id/btn_take_photo"
        app:layout_constraintTop_toTopOf="@+id/txt_upload_photo" />

    <ImageButton
        android:id="@+id/btn_upload_photo"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/circle_background_solid_black"
        android:elevation="2dp"
        android:padding="6dp"
        android:scaleType="centerCrop"
        android:src="@drawable/cloudcomputing1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_take_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_upload_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="2dp"
        android:text="@string/upload_photo"
        android:textColor="@color/black"
        android:textSize="@dimen/small_font_size"
        app:layout_constraintEnd_toEndOf="@+id/btn_upload_photo"
        app:layout_constraintStart_toStartOf="@+id/btn_upload_photo"
        app:layout_constraintTop_toBottomOf="@+id/btn_upload_photo" />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="2dp"
        android:text="@string/label_gender"
        android:textColor="@color/black"
        android:textSize="@dimen/small_font_size"
        app:layout_constraintStart_toStartOf="@+id/txt_take_photo"
        app:layout_constraintTop_toBottomOf="@+id/txt_take_photo" />

    <RadioGroup
        android:id="@+id/genderRadioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="-6dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@+id/txt_gender"
        app:layout_constraintTop_toBottomOf="@+id/txt_gender">

        <RadioButton
            android:id="@+id/maleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/placeholder_male"
            android:textColor="@color/small_text"
            android:textSize="@dimen/small_font_size"
            android:buttonTint="@color/green"/>

        <RadioButton
            android:id="@+id/femaleRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/palceholder_female"
            android:textColor="@color/small_text"
            android:textSize="@dimen/small_font_size"
            android:buttonTint="@color/green"/>

    </RadioGroup>

    <TextView
        android:id="@+id/txtFirstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/first_name"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderRadioGroup" />

    <EditText
        android:id="@+id/editTextFirstName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPersonName"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFirstName" />

    <TextView
        android:id="@+id/txtLastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/last_name"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFirstName" />

    <EditText
        android:id="@+id/editTextLastName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPersonName"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLastName" />

    <TextView
        android:id="@+id/txtBirthPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/birth_place"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextLastName" />

    <EditText
        android:id="@+id/editTextBirthPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="text"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBirthPlace" />

    <TextView
        android:id="@+id/txtDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/date_of_birth"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBirthPlace" />

    <EditText
        android:id="@+id/editTextDateOfBirth"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="datetime"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDateOfBirth" />

    <TextView
        android:id="@+id/txtHouseNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/house_number"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDateOfBirth" />

    <EditText
        android:id="@+id/editTextHouseNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="text"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtHouseNumber"
        tools:ignore="TextFields" />

    <TextView
        android:id="@+id/txtCommunity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/community"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextHouseNumber" />

    <EditText
        android:id="@+id/editTextCommunity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="text"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCommunity" />

    <TextView
        android:id="@+id/txtOccupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/occupation"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextCommunity" />

    <EditText
        android:id="@+id/editTextOccupation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="text"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOccupation" />


    <TextView
        android:id="@+id/txtDistrict"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/district"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextOccupation" />

    <EditText
        android:id="@+id/editTextDistrict"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:inputType="text"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDistrict" />

    <TextView
        android:id="@+id/txtRegion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/region"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDistrict" />

    <EditText
        android:id="@+id/editTextRegion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:inputType="text"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRegion" />

    <TextView
        android:id="@+id/txtMaritalStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/marital_status"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRegion" />

    <EditText
        android:id="@+id/editTextMaritalStatus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:inputType="text"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtMaritalStatus" />

    <TextView
        android:id="@+id/txtBiography"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:padding="4dp"
        android:text="@string/bio"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMaritalStatus" />

    <EditText
        android:id="@+id/editTextBiography"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="33dp"
        android:layout_marginEnd="33dp"
        android:background="@drawable/edittext_bg_less_rounded"
        android:elevation="0.5dp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="top"
        android:hint="@string/write_a_short_introduction"
        android:inputType="textMultiLine"
        android:lines="5"
        android:maxLines="10"
        android:minHeight="35dp"
        android:paddingStart="10dp"
        android:paddingTop="12dp"
        android:paddingEnd="10dp"
        android:paddingBottom="12dp"
        android:scrollbars="vertical"
        android:textColor="@color/black"
        android:textColorHint="@color/small_text"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBiography" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="200dp"
        android:elevation="1dp"
        style="@style/ResetButtonStyle"
        android:fontFamily="@font/poppins_semibold"
        android:minHeight="35dp"
        android:text="@string/reset"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/body_font_size_medium"
        app:layout_constraintEnd_toStartOf="@+id/btnSave"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="60dp"
        style="@style/SaveButtonStyle"
        android:fontFamily="@font/poppins_semibold"
        android:minHeight="35dp"
        android:text="@string/save"
        android:textAllCaps="false"
        android:elevation="1dp"
        android:textColor="@color/black"
        android:textSize="@dimen/body_font_size_medium"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnReset"
        app:layout_constraintTop_toBottomOf="@+id/editTextBiography" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>